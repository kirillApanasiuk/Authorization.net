@model ProviderFacebook.Controllers.LoginViewModel
<h1>Login</h1>

<a asp-controller="Home" asp-action="Index">Home</a>

<h3>Login with external provider</h3>

<form asp-controller="Admin" asp-action="ExternalSignIn">
    @foreach (var provider in Model.ExternalProviders)
    {
        <button>@provider.DisplayName</button>
    }
</form>

<form asp-controller="Admin" asp-action="Login" method="post">
    <div asp-validation-summary="All"></div>

    <input hidden asp-for="ReturnUrl"/>

    <div>
        <label>User name</label>
        <input asp-for="UserName"/>
        <span asp-validation-for="UserName"></span>
    </div>
    <div>
        <label>Password</label>
        <input asp-for="Password"/>
        <span asp-validation-for="Password"></span>
    </div>
    <p>
        <button type="submit">Log in!</button>
    </p>
</form>